{
  "name": "book-manager",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^40.0.0",
    "electron-packager": "^17.1.2"
  },
  "build": {
    "appId": "com.book.manager",
    "productName": "مدیریت کتاب‌ها",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  }
}